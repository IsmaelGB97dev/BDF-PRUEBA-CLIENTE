
@{
    ViewBag.Title = "Reportes";
}


<div class="row">
    <div class="col-12">
        <h1 class="h4 rounded text-center bg-color3 text-white py-1 text-uppercase">Reportes</h1>
    </div>
    <div class="col-lg-6">
        <label for="ddReporte" class="form-label">Seleccione el reporte</label>
        <select id="ddReporte" class="form-select form-select-sm">
            <option value="0">-- Seleccione</option>
            <option value="1">Prestamos por estado y moneda con monto mayor a 10,000</option>
            <option value="2">Prestamos activos con plazo de financiamiento mayor a 36 meses</option>
        </select>
    </div>
    <div id="filtros"  class="border p-3 col-12 mt-3 shadow">
        <div class="row align-items-end">
            <div class="col-12">
                <h5>Filtros</h5>
            </div>
            <div class="col-md-4">
                <label for="ddEstado" class="form-label">Estado prestamo</label>
                <select id="ddEstado" class="form-select form-select-sm">
                    <option value="true">Activo</option>
                    <option value="false">Inactivo</option>
                </select>
            </div>

            <div class="col-md-4">
                <label for="ddMoneda" class="form-label">Moneda</label>
                <select id="ddMoneda" class="form-select form-select-sm"></select>
            </div>
            <div class="col-md-4">
                <button id="btnCargar" class="btn btn-primary bg-color1">Cargar Reporte</button>
            </div>
        </div>
    </div>
    <div class="col-12 mt-5">
        <div id="tablaReporte1" class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="text-center">
                    <tr>
                        <th>N° Prestamo</th>
                        <th>Cliente</th>
                        <th>Identificación</th>
                        <th>Dirección</th>
                        <th>Fecha Inicio</th>
                        <th>Fecha Fin</th>
                        <th>Moneda</th>
                        <th>Monto Solicitado</th>
                        <th>Monto Aprobado</th>
                        <th>Plazo Financiamiento</th>
                    </tr>
                </thead>
                <tbody class="text-center" id="tbodyReporte1"></tbody>
            </table>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/App/Reportes.js"></script>    
}
