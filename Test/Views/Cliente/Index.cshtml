
@{
    ViewBag.Title = "Clientes";
}

<div class="row">
    <div class="col-12">
        <h1 class="h4 rounded text-center bg-color3 text-white py-1 text-uppercase">Clientes</h1>
    </div>
    <div class="col-12">
        <button id="btnAgregar" class="btn btn-primary bg-color1 mt-2">Nuevo Cliente</button>
    </div>
    <div class="col-12 mt-4">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="text-center">
                    <tr>
                        <th>Número Identificación</th>
                        <th>Tipo Identificación</th>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Dirección</th>
                        <th>Estado</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tbodyClientes"></tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalCliente" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalClienteLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modalClienteLabel">Cliente</h1>
            </div>
            <div class="modal-body">
                <form id="formCliente" class="row">
                    <div class="mb-3 col-lg-4">
                        <input id="hdCliente" type="hidden"/>

                        <label for="ddTipoIdentificacion" class="form-label">Tipo Identificación *</label>
                        <select id="ddTipoIdentificacion" class="form-select form-select-sm">
                            <option id="0">-</option>
                        </select>
                    </div>
                    <div class="mb-3 col-lg-4">
                        <label for="txtNumeroIdentificacion" class="form-label">Número Identificación *</label>
                        <input id="txtNumeroIdentificacion" type="text" class="form-control form-control-sm" required>
                    </div>
                    <div class="mb-3 col-lg-4">
                        <label for="txtPrimerNombre" class="form-label">Primer Nombre *</label>
                        <input id="txtPrimerNombre" type="text" class="form-control form-control-sm" required maxlength="50">
                    </div>
                    <div class="mb-3 col-lg-4">
                        <label for="txtSegundoNombre" class="form-label">Segundo Nombre *</label>
                        <input id="txtSegundoNombre" type="text" class="form-control form-control-sm" maxlength="50">
                    </div>
                    <div class="mb-3 col-lg-4">
                        <label for="txtPrimerApellido" class="form-label">Primer Apellido *</label>
                        <input id="txtPrimerApellido" type="text" class="form-control form-control-sm" required maxlength="50">
                    </div>
                    <div class="mb-3 col-lg-4">
                        <label for="txtSegundoApellido" class="form-label">Segundo Apellido *</label>
                        <input id="txtSegundoApellido" type="text" class="form-control form-control-sm" maxlength="50">
                    </div>
                    <div class="mb-3 col-lg-4">
                        <label for="ddDireccion" class="form-label">Dirección *</label>
                        <select id="ddDireccion" class="form-select form-select-sm">
                            <option id="0">-</option>
                        </select>
                    </div>
                    <div class="mb-3 col-lg-4">
                        <label for="ddEstado" class="form-label">Estado</label>
                        <select id="ddEstado" class="form-select form-select-sm">
                            <option value="1">Activo</option>
                            <option value="0">Inactivo</option>
                        </select>
                    </div>
                    <div class="col-12 mt-2 text-center">
                        <hr />
                        <button id="btnCancelar" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button id="btnGuardar" type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/App/Cliente.js"></script>
}