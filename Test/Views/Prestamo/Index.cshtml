
@{
    ViewBag.Title = "Prestamo";
}


<div class="row">
    <div class="col-12">
        <h1 class="h4 rounded text-center bg-color3 text-white py-1 text-uppercase">Prestamos</h1>
    </div>
</div>
<div class="row align-items-end">
    <div class="col-md-12 col-lg-5 mt-3">
        <label for="ddCliente" class="form-label">Seleccione el cliente</label>
        <select id="ddCliente" class="form-select form-select-sm">
            <option id="0">-</option>
        </select>
    </div>
    <div class="col-md-12 col-lg-7">
        <button id="btnNuevo" class="btn btn-primary bg-color1">Nuevo Prestamo</button>
    </div>
</div>
<div class="row">
    <div class="col-12 mt-4">
        <hr />
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="text-center">
                    <tr>
                        <th>Número Prestamo</th>
                        <th>Tipo de Prestamo</th>
                        <th>Fecha Inicio</th>
                        <th>Fecha Fin</th>
                        <th>Moneda</th>
                        <th>Monto solicitado</th>
                        <th>Monto Aprobado</th>
                        <th>Plazo Financiamiento</th>
                        <th>Estado</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tbodyPrestamos"></tbody>
            </table>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="modalPrestamo" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalPrestamoLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modalPrestamoLabel">Prestamo</h1>
            </div>
            <div class="modal-body">
                <form id="formPrestamo" class="row">
                    <div class="mb-3 col-lg-4">
                        <input id="hdPrestamo" type="hidden" />

                        <label for="ddTipoPrestamo" class="form-label">Tipo Prestamo</label>
                        <select id="ddTipoPrestamo" class="form-select form-select-sm">
                            <option id="0">-</option>
                        </select>
                    </div>
                    <div class="mb-3 col-lg-4">
                        <label for="txtFechaInicio" class="form-label">Fecha Inicio *</label>
                        <input id="txtFechaInicio" type="date" class="form-control form-control-sm" required>
                    </div>
                    <div class="mb-3 col-lg-4">
                        <label for="txtFechaFin" class="form-label">Fecha Fin *</label>
                        <input id="txtFechaFin" type="date" class="form-control form-control-sm" required>
                    </div>
                    <div class="mb-3 col-lg-4">
                        <label for="ddMoneda" class="form-label">Moneda</label>
                        <select id="ddMoneda" class="form-select form-select-sm">
                            <option id="0">-</option>
                        </select>
                    </div>
                    <div class="mb-3 col-lg-4">
                        <label for="txtMontoSolicitado" class="form-label">Monto Solicitado *</label>
                        <input id="txtMontoSolicitado" type="text" class="form-control form-control-sm" required onkeypress="return validarDecimal(event)">
                    </div>
                    <div class="mb-3 col-lg-4">
                        <label for="txtMontoAprobado" class="form-label">Monto Aprobado *</label>
                        <input id="txtMontoAprobado" type="text" class="form-control form-control-sm" required onkeypress="return validarDecimal(event)">
                    </div>
                    <div class="mb-3 col-lg-4">
                        <label for="txtPlazoFinanciamiento" class="form-label">Plazo Financiamiento(meses) *</label>
                        <input id="txtPlazoFinanciamiento" type="text" class="form-control form-control-sm" required min="1" onkeypress="return validarEntero(event)">
                    </div>
                    <div class="mb-3 col-lg-4">
                        <label for="ddEstado" class="form-label">Estado</label>
                        <select id="ddEstado" class="form-select form-select-sm">
                            <option value="1">Activo</option>
                            <option value="0">Inactivo</option>
                        </select>
                    </div>
                    <div class="col-12 mt-2 text-center">
                        <hr />
                        <button id="btnCancelar" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button id="btnGuardar" type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/App/Prestamos.js"></script>
}
