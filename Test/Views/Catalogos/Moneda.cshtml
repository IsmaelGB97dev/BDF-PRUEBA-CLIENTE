

@{
    ViewBag.Title = "Monedas";
}

<div class="row">
    <div class="col-12">
        <h1 class="h4 rounded text-center bg-color3 text-white py-1 text-uppercase">Monedas</h1>
    </div>
    <div class="col-12">
        <button id="btnAgregar" class="btn btn-primary bg-color1 mt-2">Nueva</button>
    </div>
    <div class="col-12 mt-4">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="text-center">
                    <tr>
                        <th>Nombre</th>
                    </tr>
                </thead>
                <tbody class="text-center" id="tbodyMoneda"></tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalMoneda" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalMonedaLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modalMonedaLabel">Moneda</h1>
            </div>
            <div class="modal-body">
                <form id="formMoneda" class="row">
                    <div class="mb-3 col-lg-12">
                        <input id="hdMoneda" type="hidden" />
                        <label for="txtNombre" class="form-label">Nombre *</label>
                        <input id="txtNombre" type="text" class="form-control form-control-sm" required>
                    </div>
                    <div class="col-12 mt-2 text-center">
                        <hr />
                        <button id="btnCancelar" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button id="btnGuardar" type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script src="~/Scripts/App/Moneda.js"></script>
}

